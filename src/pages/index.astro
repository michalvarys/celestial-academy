---
import PageLayout from "../layouts/PageLayout.astro";
import Testimonials from "../sections/homepage/Testimonials.astro";
import About from "../sections/homepage/About.astro";
import Hero from "../sections/homepage/Hero.astro";
import Services from "../sections/homepage/Services.astro";
import { getEntry } from "astro:content";

const { data } = await getEntry("homepage", "index");
const { seoTitle, seoDescription, seoKeywords } = data;
---

<PageLayout
  title={seoTitle}
  description={seoDescription}
  keywords={seoKeywords}
  className="space-y-10 lg:space-y-32"
  footerProps={{ className: "lg:mt-20" }}
>
  <Hero />
  <About />
  <Testimonials />
  <Services />
</PageLayout>
